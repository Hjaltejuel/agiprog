@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <a class="seventh before after" href="Identity/Account/Manage/Index">
            Hello, @context.User.Identity.Name!
        </a>
        <form action="/Identity/Account/Logout?returnUrl=%2F" method="post">
            <button class="logout-btn" type="submit">Logout</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="seventh before after" href="Identity/Account/Register">Register</a>
        <a class="seventh before after" href="Identity/Account/Login">Login</a>
    </NotAuthorized>
</AuthorizeView>